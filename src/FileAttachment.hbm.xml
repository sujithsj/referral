<?xml version="1.0" encoding="UTF-8"?><!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
  <class dynamic-update="true" table="FILE_ATTACHMENT" lazy="true" name="com.ds.domain.core.FileAttachment" dynamic-insert="true">
    <id name="id" type="long" column="ID" >
 		<generator class="native" />
 	</id>
 	
    <version type="long" column="LOCK_VERSION" unsaved-value="undefined" name="lockVersion"/>
 	
    <property name="fileName" not-null="true" length="255" type="java.lang.String" column="FILE_NAME"/>
    <property name="mimeType" not-null="true" length="50" type="java.lang.String" column="MIME_TYPE"/>    
    <property name="fileSize" not-null="true" type="long" column="FILE_SIZE"/>    
    <property name="width" not-null="false" type="int" column="WIDTH"/>
    <property name="height" not-null="false" type="int" column="HEIGHT"/>
    <property name="fileContent" not-null="false" type="org.springframework.orm.hibernate3.support.BlobByteArrayType" column="FILE_CONTENT"/>    
  </class>
</hibernate-mapping>